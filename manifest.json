{
    "manifest_version": 2,
    "name": "FX OSK",
    "version": "1.2",
    "description": "On-Screen Keyboard for FireFox",
    "icons": {
        "48": "icon.svg",
        "96": "icon.svg"
    },
    "background": {
        "scripts": ["kb.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["keyboard.js"],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "webRequest",
        "tabs",
        "activeTab",
        "<all_urls>"
    ]
}